498 Diagonal Traversal
https://leetcode.com/problems/diagonal-traverse/description/?envType=daily-question&envId=2025-08-25


class Solution {
public:
    vector<int> findDiagonalOrder(vector<vector<int>>& mat) {
        int row=0,col=0;
        vector<int>vec;
        while(true){
            if(row>-1 && col>-1 && row<mat.size() && col<mat[0].size() ){
                vec.push_back(mat[row][col]);
            }
            if(row==mat.size()-1 && col==mat[0].size()-1) break;
            if((row+col)%2==0){
                row--;
                col++;
                if(row<0 && col<mat[0].size()){
                    row=0;
                }
                else if(col>mat[0].size()-1)
                {
                    row+=2;
                    col=mat[0].size()-1;
                }
            }
            else{
                row++;
                col--;
                if(col<0 && row>=0){
                    col=0;
                }
                else if(row>mat.size()-1 && col<mat[0].size()){
                    row=mat.size()-1;
                    col+=2;
                }
            }
        }
        return vec;
    }
};
